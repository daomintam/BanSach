<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".User.MyUserActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@color/bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:ignoreGravity="@color/white">

        <ImageView
            android:id="@+id/avatarUser"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/tron"
            android:src="@drawable/user" />

        <ImageButton
            android:background="#00000000"
            android:elevation="5dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/ic_came"
            android:layout_width="50dp"
            android:id="@+id/btnCamera"
            android:layout_height="35dp"
            android:layout_marginTop="275dp"></ImageButton>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="320dp">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tenMyUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatarUser"
            android:text="M I N T A M"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textColor="#00405E"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/tenMyUser"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="9pt"
                android:textColor="@color/textXanh"
                android:text="Số điện thoại: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="9pt"
                android:textColor="#001823"
                android:id="@+id/sdtUser"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="9pt"
                android:textColor="@color/textXanh"
                android:text="Email: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="9pt"
                android:textColor="#00202E"
                android:id="@+id/emailUser"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>