<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:theme="@style/AppTheme"
    tools:context=".Account.LogInActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="BOOK STORE"
        android:textAlignment="center"
        android:textColor="#006593"

        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="Tên đăng nhập"
        android:textStyle="bold"
        android:textColor="@color/textXanh"
        android:textSize="9pt"></TextView>

    <EditText
        android:typeface="monospace"
        android:id="@+id/edUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/text"
        android:layout_marginBottom="20dp"
        android:textColorHint="@color/fullwhite"
        android:elevation="5dp"
        android:background="@drawable/innershadow"
        android:drawableStart="@drawable/user2"
        android:drawablePadding="10dp"
        android:hint="example@gmail.com"
        android:padding="10dp"
        android:textSize="8pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Mật khẩu"
        android:textStyle="bold"
        android:textColor="@color/textXanh"
        android:textSize="9pt"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/innershadow"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:typeface="monospace"
            android:textColor="@color/text"
            android:drawableStart="@drawable/password"
            android:drawablePadding="7dp"
            android:hint="* * * * * * * *"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="8pt" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--        <ToggleButton-->
        <!--            android:id="@+id/check"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="22dp"-->
        <!--            android:layout_marginRight="20dp"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginLeft="35dp"-->
        <!--            android:background="@drawable/toggle"-->
        <!--            android:checked="false" />-->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu mật khẩu"
            android:id="@+id/check"></CheckBox>

        <TextView
            android:textColor="@color/textXanh"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Lưu mật khẩu"></TextView>
    </LinearLayout>

    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Đăng nhập"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnLogin"
        android:textColor="@color/textXanh"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="5000"
        android:textAllCaps="true"
        android:textSize="6pt"
        android:onClick="checkLogin"
        app:sub_btn_tick_color="@color/white"
        app:sub_btn_line_color="@color/text"
        app:sub_btn_ripple_color="@color/text" />
    <!--    </LinearLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản ?"
            android:textColor="@color/textXanh"
            android:textSize="5pt"></TextView>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Đăng ký"
            android:textAllCaps="false"
            android:textColor="@color/textXanh"
            android:textSize="7pt" />
    </LinearLayout>
</LinearLayout>